# ~/bash/func

path() {
    sed 's/:/\n/g' <<< $PATH
}

if command -v cmd &> /dev/null; then
    # functions only applicable to windows environment
    open() {
        [[ -z $1 ]] && { start "" . ; return; }
        [[ ! -e "./$1" && ! -e "$1" && ! $1 =~ (\/[cC]:|[cC]:) ]] && \
            echo "error: '$1' does not exist." && return
        start "" "${1//'/'/'\\'}"
    }
fi


if [ -f ~/bash/ufunc ]; then
    source ~/bash/ufunc
fi
