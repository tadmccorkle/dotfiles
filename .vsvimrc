set backspace=indent,eol,start

set hlsearch
set ignorecase
set smartcase
set incsearch

set visualbell
set number relativenumber
set scrolloff=8
set scroll=25

let mapleader=","

noremap <Space> <Nop>

noremap <C-q> <C-v>

nmap <Leader><Leader>r :source ~/.vsvimrc<CR>

nmap <C-O>             :vsc View.NavigateBackward<CR>
nmap <C-I>             :vsc View.NavigateForward<CR>
nmap <C-]>             :vsc Edit.GoToDefinition<CR>
nmap <Leader>gd        :vsc Edit.GoToDefinition<CR>
nmap <Leader>gD        :vsc Edit.GoToDeclaration<CR>
nmap <Leader>gr        :vsc Edit.FindAllReferences<CR>
nmap <Leader>gi        :vsc Edit.GoToImplementation<CR>
nmap <Leader>rn        :vsc Refactor.Rename<CR>
nmap <Leader><Leader>f :vsc Edit.FormatDocument<CR>
nmap <Leader>ca        :vsc View.QuickActions<CR>
nmap K                 :vsc Edit.QuickInfo<CR>
nmap <Leader>k         :vsc Edit.ParameterInfo<CR>
nmap <Leader>do        :vsc View.ErrorList<CR>
nmap [d                :vsc View.PreviousError<CR>
nmap ]d                :vsc View.NextError<CR>
nmap <Leader>[d        :vsc Edit.GoToPreviousIssueInFile<CR>
nmap <Leader>]d        :vsc Edit.GoToNextIssueInFile<CR>
nmap <Leader>ff        :vsc Edit.GoToFile<CR>
nmap <Leader>fb        :vsc Edit.GoToRecentFile<CR>
nmap <Leader>ft        :vsc Edit.GoToType<CR>
nmap <Leader>fg        :vsc Edit.GoToText<CR>
nmap <Leader><Leader>b :vsc Build.BuildSelection<CR>

nnoremap <C-d> <C-d>zz
nnoremap <C-u> <C-u>zz

nnoremap         x "_x
nnoremap         X "_X
nnoremap <Leader>x ""x
nnoremap <Leader>X ""X
xnoremap <Leader>x "_x
noremap  <Leader>d "_d
noremap  <Leader>D "_D
noremap  <Leader>c "_c
noremap  <Leader>C "_C
xnoremap <Leader>p "_dP
noremap  <Leader>y "+y
nnoremap <Leader>Y "+Y

nmap gcc :vsc Edit.ToggleLineComment<CR>
xmap gc  :vsc Edit.ToggleLineComment<CR>
xmap gsc :vsc Edit.CommentSelection<CR>
xmap gsu :vsc Edit.UncommentSelection<CR>
