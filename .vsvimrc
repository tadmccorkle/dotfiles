set backspace=indent,eol,start

set hlsearch
set ignorecase
set smartcase
set incsearch

set scrolloff=8
set scroll=25
set relativenumber

noremap <Space> <Nop>

noremap <C-q> <C-v>

nmap <C-O> :vsc View.NavigateBackward<CR>
nmap <C-I> :vsc View.NavigateForward<CR>
nmap <C-]> :vsc Edit.GoToDefinition<CR>
nmap gd    :vsc Edit.GoToDefinition<CR>
nmap gD    :vsc Edit.GoToDeclaration<CR>
nmap ,gr   :vsc Edit.GoToReference<CR>
nmap ,gi   :vsc Edit.GoToImplementation<CR>
nmap ,gr   :vsc Refactor.Rename<CR>
nmap ,,f   :vsc Edit.FormatDocument<CR>
nmap ,ca   :vsc View.QuickActions<CR>
nmap K     :vsc Edit.QuickInfo<CR>
nmap ,k    :vsc Edit.ParameterInfo<CR>
nmap ,do   :vsc View.ErrorList<CR>
nmap ,dp   :vsc View.PreviousError<CR>
nmap ,dn   :vsc View.NextError<CR>
nmap ,ff   :vsc Edit.GoToFile<CR>
nmap ,fb   :vsc Edit.GoToRecentFile<CR>
nmap ,ft   :vsc Edit.GoToType<CR>
nmap ,lg   :vsc Edit.GoToText<CR>

nnoremap  x "_x
nnoremap ,x ""x
vnoremap ,x "_x
noremap  ,d "_d
noremap  ,c "_c
vnoremap ,p "_dP
noremap  ,y "+y
nnoremap ,Y "+Y

nnoremap <C-d> <C-d>zz
nnoremap <C-u> <C-u>zz

noremap   +  <C-a>
noremap   -  <C-x>
vnoremap g+ g<C-A>
vnoremap g- g<C-x>
