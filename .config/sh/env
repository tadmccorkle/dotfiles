#!/bin/sh

pf_path() {
	case ":${PATH}:" in
		*:"$1":*) ;;
		*) export PATH="$1:$PATH" ;;
	esac
}

pb_path() {
	case ":${PATH}:" in
		*:"$1":*) ;;
		*) export PATH="$PATH:$1" ;;
	esac
}

if [ -z "$XDG_CONFIG_HOME" ]; then
  export XDG_CONFIG_HOME="$HOME/.config"
fi
if [ -z "$XDG_DATA_HOME" ]; then
	export XDG_DATA_HOME=$HOME/.local/share
fi

if [ -z "$PNPM_HOME" ]; then
	export PNPM_HOME="$HOME/Library/pnpm"
fi
pf_path $PNPM_HOME

if [ -f "$HOME/.cargo/env" ]; then
	. "$HOME/.cargo/env"
fi

pf_path "$HOME/go/bin"
pf_path "$HOME/bin"
